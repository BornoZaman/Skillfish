    <body>



        <!-- Header Section - - - - - - - - - - - - - - - - - - - -->

        <div class = "header">
        <div class ="container">

            <div class ="logo">
                <%=image_tag('skillit-logo.png') %>              
               
            </div>

                <div class ="search">
                    <form action=""> 
                    <input type="text" id="search" placeholder="Search Skill, Project, or Name.."/>
