                    </ul>   
                    </div>
        </div>
    </div>

        

    <div id="content">

        <!-- 1/4 + 1/2 + 1/4 length -->

            <div class="box column-quarter-1">

            </div>

            <div class="box column-half-1">

 <!-- all content is found in this div -->

            <div id="header">


<h2>View all projects</h2>

<% @project.each do |p| %>
	<p>
		<center><%= link_to 'Name', project_path(p) %>: <%= p.name %><br></center>
		<center>About: <%= p.description %> <br></center>
		<center>status: <%= p.status %> <br></center>

		

	</p>

<% end %>
</div>

<div class = "box column-quarter-4">
