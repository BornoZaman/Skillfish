<!DOCTYPE html>

<!DOCTYPE html>

<html>

    <head>
        <%= stylesheet_link_tag "projects" %>
        <meta charset="UTF-8">
        <title>Edit a Project: Skillfish</title>
    </head>

    <body>

        <%= render "layouts/navbar" %>

        <!-- Header Section - - - - - - - - - - - - - - - - - - - -->


        <div id="content">

            <!-- 1/4 + 1/2 + 1/4 length -->

            <div class="box column-quarter-1">
            </div>

            <div class="box column-half-1">

            <!-- all content is found in this div -->

            <div id="header">

                <center><h1>Make New Project<h1></center>



                <% if user_signed_in? %>

                    <%= form_for @project do |p| %>




                    <center><strong>Start project as <%= current_user.first_name %></strong></p></center>

                    


                    <center><p>Image upload using paperclip goes here</p></center>

                	<p>
                	<center><strong><%= p.label :name %> <br></strong></center>
                	<center><%= p.text_field :name %></center>
                	</p>

                    <p>
                    <center><strong><%= p.label :description %> <br></strong></center>
                    <center><%= p.text_area :description %></center>
                    </p>
                	
                	
                	<center><%= p.submit %> </center>
                    <p>
                    <%end%>
                <%else %>
                
                <center>
                Please Log in to Create a new project:
                
                <%= link_to 'LOG IN', new_user_session_path %>
                </center>
                <% end %>

                    

            </div>

            <div class = "box column-quarter-4">
            </div>

</body>

<footer>

    <%= render "layouts/footer" %>

 </footer>

</html>