<!DOCTYPE html>

<!DOCTYPE html>

<html>

    <head>
        <%= stylesheet_link_tag "projects" %>
        <meta charset="UTF-8">
        <link href="skillfish_layout.css" type="text/css" rel="stylesheet" />

        <title>Projects: Skillit</title>
    </head>


    <body>

    <%= render "layouts/navbar" %>    

    <div id="content">
        <div class="box column-quarter-1">
        </div>

        <div class="box column-half-1">
            <!-- all content is found in this div -->

            <div id="header">

                <h1><%= @project.name %></h1>

                <img src="http://lorempixel.com/400/200/sports/1/"/>

                <div id="SkillsNeeded">
                    <div id = "skillsNeeded2"><h1>Skills Needed:</h1>
                    </div>

                    <div id = "skills">
                        <p>
                     <% if !@listings.blank? %>
                        <% for item in @listings %>
                           - <%= item.name %>
                        <% end %>
                      <% end %></p>
                    </div>
                </div>
            </div>

            <div id="content_upper">
            <p></p>
            </div>

            <div id="content_lower">
            <!-- 2/3 + 1/3 length -->
                <div class="box column-two-thirds-1">
                    <div id="content_upper1">
                        <p><strong>Short Description:</strong></p>
                    </div>

                    <div id="content_lower1">
                        <p> <%= @project.description %> </p>
                    </div>

                    <div id= "content_lower2">
                        <h1><u>Connected Members</u></h1>
                        <div id = "connectedMembers">
                            <%=image_tag('SallyFreshademon.jpeg')%> 
                            <%=image_tag('SallyFreshademon.jpeg')%> 
                            <%=image_tag('SallyFreshademon.jpeg')%> 
                        </div>
                    </div>

                    <div id = "content_lower3">
                    </div>
                </div>

                <div class="box column-third-3">
                    <div id="content_upper2">
                        <div id = "pageAdmin">
                            <%=image_tag('SallyFreshademon.jpeg')%>

                            <h2>Sally Freshman</h2>
                            <h3>Page Admin</h3>
                        </div>
                    </div>

                    <div id="content_lower2">
                        <div id = "button">
                            <p>Contact Admin</p> 
                        </div>

                        <div id = "button">
                            <p>Share This Page</p>
                        </div>

                        <div id = "button">
                            <p><%= link_to "Edit This Page", edit_project_path(@project) %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>                
    
    </body>

    <footer> 
    <%= render "layouts/footer" %>
    </footer>

</html>

