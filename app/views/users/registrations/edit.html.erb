
<!DOCTYPE html>

<html>
<%= stylesheet_link_tag "projects" %>
    <head>

        <meta charset="UTF-8">
        <link href="skillfish_layout.css" type="text/css" rel="stylesheet" />

        <!--<link href="skillfish_layout.css" type="text/css" rel="stylesheet" />--!>

        <!--<link href="skillfish_layout.css" type="text/css" rel="stylesheet" />-->

        <title>Settings: Skillit</title>

    </head>



    <body>
        <!-- Header Section - - - - - - - - - - - - - - - - - - - -->

    <%= render "layouts/navbar" %> 

    <div id="content">

        <!-- 1/4 + 1/2 + 1/4 length -->

            <div class="box column-quarter-1">

            </div>

            <div class="box column-half-1">

 <!-- all content is found in this div -->

            <div id="header">
<h2>Settings</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <br></br>


  <div class="field">
    <center>
        Profile Picture: 
        <%= f.file_field :avatar %>
    </center> 
  </div>

  <br>

  <div class="field">
    <center><%= f.label :first_name %><br />
    <%= f.text_field :first_name %> </center> 
  </div>

  <div class="field">
    <center><%= f.label :last_name %><br />
    <%= f.text_field :last_name %> </center> 
  </div>

  <div class="field">
    <center><%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %></center>
  </div>

  <div class="field">
    <center><%= f.label :about %><br />
    <%= f.text_area :about %></center>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <!-- BUG WITH changing password SEE Registrations_Controller -->

  <div class="field">
    <br></br>
    <center><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %></center>
  </div>

  <div class="field">
    <br></br>
   <center> <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %> </center>
  </div>

<!--current password confirmation code pulled out-->
  

  <br></br>
  <center>MY SKILLS:</center>
  <% if !@talents.blank? %>
    <% for item in @talents %>
      <center><%= item.name %></center>
      <br>
    <% end %>
  <% end %>




  <br></br>
  <center>ADD SKILLS:</center>

  <% if !@skill.blank? %>
    <% for item in @skill %>
      <center><%= item.id %>
      <%= link_to item.name, talents_path(:user_id => @user.id, :skill_id => item.id)  %></center>
      <br>
    <% end %>
  <% end %>


  <div class="actions">
    <br></br>
    <center><%= f.submit "Update" %> </center>
  </div>
<% end %>

<h3>Unhappy?</h3>

<p><center> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></center></p>
</div>
<div class = "box column-quarter-4">
</div>
</body>

 <%= render "layouts/footer" %>
</html>
